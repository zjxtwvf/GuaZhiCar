<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.terminator.zjxtwvf.guazi.view.widget.NoScrollViewPager
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/banner_home_content"
        app:banner_pointAutoPlayAble="false"
        app:banner_transitionEffect="alpha" />

    <View
        android:id="@+id/home_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorMianBackground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fff"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_main_home"
            >

            <ImageView
                android:id="@+id/iv_item_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_home_selected"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_item_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="#333" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:id="@+id/ll_main_buy_car"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_item_tab_buy_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/tab_buy_normal"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_item_tab_buy_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:text="买车"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:id="@+id/ll_main_sell_car"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_item_tab_sell_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/tab_sell_normal"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_item_tab_sell_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:text="卖车"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:id="@+id/ll_main_mine"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_item_tab_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/tab_my_info_normal"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_item_tab_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="#333"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

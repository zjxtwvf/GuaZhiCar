<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_evaluate_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_evaluate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorTextBlak"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_evaluate_item_icon"
        />
    <TextView
        android:id="@+id/tv_evaluate_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorTextBlak"
        android:layout_toRightOf="@id/tv_evaluate_title"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_sel"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_evaluate_fail"
        android:drawableRight="@drawable/icon_notice"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_evaluate_count"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        />

    <ImageView
        android:src="@drawable/ic_selft_bargain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSplitLine"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        ></View>

</RelativeLayout>
